---
import { ViewTransitions, fade } from "astro:transitions";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html class="bg-[#f5e9db] text-[#004aad] min-h-screen" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Visitanos en nuestro local para comer los mejores sandwich de la ciudad."
    />
    <meta
      name="keywords"
      content="sandwich, ensalada, miga, ciabatta, bebidas, limonada, cerveza, salad, beer, lemonade, drinks, ciabatta, miga, sandwich"
    />
    <ViewTransitions />
    <slot name="preload" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <link
      rel="preload"
      href="/fonts/whitestar.woff"
      as="font"
      type="font/woff"
      crossorigin
    />
  </head>
  <body>
    <header>
      <div class="my-10">
        <h1 class="text-center uppercase text-5xl text-gray-400">Menu</h1>
        <h2 class="font-serif text-center text-7xl -mt-3">Oliva</h2>
      </div>
      <img
        class="absolute w-20 top-4 -left-10 opacity-50"
        src="/images/beer.png"
        alt="beer"
      />
      <img
        class="absolute w-36 top-0 -right-14 opacity-50"
        src="/images/sub.png"
        alt="sub"
      />
      <img
        class="absolute w-28 top-2/3 -left-10 opacity-50"
        src="/images/limonada.png"
        alt="limonada"
      />
      <img
        class="absolute w-36 bottom-0 -right-14 opacity-50"
        src="/images/sandwich.png"
        alt="sandwich"
      />
      <img
        class="absolute w-32 top-[30%] -right-14 opacity-50"
        src="/images/salad.png"
        alt="salad"
      />
      <nav class="flex">
        <ul class="flex gap-4 mx-auto uppercase font-medium mb-5">
          <li class="hover:underline">
            <a href="/">Ciabatta</a>
          </li>
          <li class="hover:underline">
            <a href="/miga">Miga</a>
          </li>
          <li class="hover:underline">
            <a href="/ensaladas">Ensaladas</a>
          </li>
          <li class="hover:underline">
            <a href="/bebidas">Bebidas</a>
          </li>
        </ul>
      </nav>
    </header>
    <main class="flex flex-col max-w-sm mx-auto px-6">
      <slot transition:animate={fade({ duration: "10s" })} />
    </main>
    <footer class="text-xs py-6 text-center text-black/30">
      Â© 2024 Oliva - Todos los derechos reservados
    </footer>
    <style is:global>
      @font-face {
        font-family: "White star";
        src: url("/fonts/whitestar.woff") format("woff");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
    </style>
  </body>
</html>
